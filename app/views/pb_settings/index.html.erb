						$(document).on("click", ".save_setting", function() {
							var id =  $(this).parents("td").find("textarea").attr("rel")
							var value = $(this).parents("td").find("textarea").val()
							var url = '<%= save_pb_settings_path %>?id='+id+"&value="+value
							if (true) {
								$.ajax({
									url : url,
									type: "GET",
									success:function(data, textStatus, jqXHR)
									{
										modernAlert(data)
										if(table.length) {
											table.dataTable().fnFilter();
										} else {
											location.reload(); 
										}
									}
								})
							}
						})
