		<div class="page-content">

			<!-- Main sidebar -->
			<div class="sidebar sidebar-main">
				<div class="sidebar-content">

					<!-- User menu -->
					<div class="sidebar-user">
						<div class="category-content">
							<div class="media">
								<% if !@current_user.shop_url.nil? %>
									<a target="_blank" href="<%= @current_user.shop_url %>" class="media-left">
										<img src="<%= @current_user.image %>" class="img-circle img-sm" alt="">
