				<div class="content">
				
					<% if notice %><p class="alert alert-success"><%= notice %></p><% end %>
					<% if alert %><p class="alert"><%= alert %></p><% end %>
					<%= yield %>

				</div>
				<!-- /content area -->
				
				
				
			</div>
			<!-- /main content -->
			
			
			
		</div>
