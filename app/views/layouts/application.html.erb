									<a href="#"><i class="icon-stack2"></i> <span>Quảng cáo</span></a>
									<ul>
										<li <%= 'class=active' if ["ads"].include?(params[:controller]) %>><a href="<%= ads_path %>">Quản lý quảng cáo</a></li>
										<% if ["admin"].include? @current_user.role %>
											<li <%= 'class=active' if ["ad_positions"].include?(params[:controller]) %>><a href="<%= ad_positions_path %>">Vị trí đặt quảng cáo</a></li>
										<% end %>
										<!--<li><a href="#">Thống kê</a></li>-->
									</ul>
								</li>
							</ul>
						</div>
					</div>
					<!-- /main navigation -->

				</div>
			</div>
