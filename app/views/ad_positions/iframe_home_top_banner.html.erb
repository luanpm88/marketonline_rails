<div class="home_top_banner_frame">
  <!--<div class="ad_loading"></div>
  <div class="ad_loading pos2"></div>
  <div class="ad_loading pos3"></div>-->
  <div class="home_top_banner_1_2">
    <div class="home_top_banner_1">      
        <div class="banner_item" style="width:<%= @pos_1.width %>px;height:<%= @pos_1.height %>px;">
          <ul class="home_top_banner_1_slide">
            <% @pos_1.active_ads.each do |ad| %>
              <li>
                <a href="<%= click_ads_path(id: ad) %>" target="_blank">
                  <img title="" src="<%= ad.image_url(:banner) %>" />
                </a>
              </li>
            <% end %>
          </ul>
        </div>      
    </div>
    <div class="home_top_banner_2">
      <div class="banner_item" style="width:<%= @pos_2.width %>px;height:<%= @pos_2.height %>px;">
          <ul class="home_top_banner_2_slide">
            <% @pos_2.active_ads.each do |ad| %>
              <li>
                <a href="<%= click_ads_path(id: ad) %>" target="_blank">
                  <img title="" src="<%= ad.image_url(:banner) %>" />
                </a>
              </li>
            <% end %>
          </ul>
        </div>      
    </div>
  </div>
  <div class="home_top_banner_3<%= params[:device] %>">
    <div class="banner_item" style="width:<%= (@pos_1.width+@pos_2.width) %>px;height:<%= @pos_3.height %>px;">
      <ul class="home_top_banner_3_slide<%= params[:device] %>">
        <% @pos_3.active_ads.each_with_index do |ad, num| %>
          <li class="<%= 'hidden' if num == 4 and params[:device] == "mobile" %>">
            <a href="<%= click_ads_path(id: ad) %>" target="_blank">
              <img title="<%= ad.name %>" src="<%= ad.image_url(:banner) %>" />
            </a>
            <br />
            <a class="home_top_banner_3_title" href="">
              <%= ad.name %>
            </a>
            <br />
            <a class="home_top_banner_3_price" href="">
              <%= format_price(ad.display_price) %> VNƒê<%= "/#{ad.display_price_unit}" if ad.display_price_unit.present? %>
            </a>
          </li>
          
          <% if params[:device] == "mobile" and num%2 == 1 %>
            </ul><ul class="home_top_banner_3_slide<%= params[:device] %>">
          <% end %>
          
        <% end %>
      </ul>
    </div>    
  </div>
</div>