<div class="">
<ul class="iframe_area_top_3_banner">
  <div class="loading"></div>
  <% @pos.area_ads(params[:area_id]).each do |ad| %>
    <li>
      <a title="<%= ad.name %>" href="<%= click_ads_path(id: ad) %>" target="_blank">
        <img title="" src="<%= ad.image_url(:banner) %>" />
      </a>
    </li>
  <% end %>
  <% @pos_2.area_ads(params[:area_id]).each do |ad| %>
    <li>
      <a title="<%= ad.name %>" href="<%= click_ads_path(id: ad) %>" target="_blank">
        <img title="" src="<%= ad.image_url(:banner) %>" />
      </a>
    </li>
  <% end %>
  <% if !params[:area_id].present? %>
    <% @pos_3.area_ads(params[:area_id]).each do |ad| %>
      <li>
        <a title="<%= ad.name %>" href="<%= click_ads_path(id: ad) %>" target="_blank">
          <img title="" src="<%= ad.image_url(:banner) %>" />
        </a>
      </li>
    <% end %>
  <% end %>
</ul>
</div>