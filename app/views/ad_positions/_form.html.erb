                                          
                                          <%= form_for(@ad_position, html: {class: "form-validate-jquery"}) do |f| %>
											<div class="row">
												<div class="col-md-6">
													<fieldset class="text-semibold">
														<legend><i class="icon-file-text position-left"></i> Thông tin cơ bản</legend>
														
														<div class="form-group">
															<label>Mã <span class="text-danger">*</span></label>
															<%= f.text_field :name, required: "required", class: "form-control" %>
														</div>
				
														<div class="form-group">
															<label>Tiêu đề <span class="text-danger">*</span></label>
															<%= f.text_field :title, required: "required", class: "form-control" %>
														</div>
														
														<div class="form-group">
															<label>Kích thước (Rộng x Dài) <span class="text-danger">*</span></label>
                                                            <div class="row">
                                                              <div class="col-md-6">
                                                                <%= f.text_field :width, required: "required", class: "form-control text-right number_input" %>
                                                              </div>
                                                              <div class="col-md-6">
                                                                <%= f.text_field :height, required: "required", class: "form-control text-right number_input" %>
                                                              </div>
                                                            </div>
														</div>
														
													</fieldset>
												</div>
		
												<div class="col-md-6">
													<fieldset class="text-semibold">
														<legend><i class="icon-file-text position-left"></i> Cài đặt quảng cáo</legend>
																											
														
															  
														<div class="form-group">
															<label>Phí trên lượng nhấn (VNĐ/Lượt nhấn) <span class="text-danger">*</span></label>
                                                            <div class="row">
                                                              <div class="col-md-12">
                                                                <%= f.text_field :click_price, required: "required", class: "form-control text-right number_input" %>
                                                              </div>                                                              
                                                            </div>
														</div>
															  
														<div class="form-group">
															<label>Phí theo thời gian (VNĐ/ngày) <span class="text-danger">*</span></label>
                                                            <div class="row">
                                                              <div class="col-md-12">
                                                                <%= f.text_field :day_price, required: "required", class: "form-control text-right number_input" %>
                                                              </div>                                                              
                                                            </div>
														</div>
                                                        
													</fieldset>
												</div>
												
											</div>
	
											<div class="text-right">
												<% if !@ad_position.id.present? %>
													<button id="reset" class="btn btn-default" type="reset">Nhập lại <i class="icon-reload-alt position-right"></i></button>
												<% end %>
												<button type="submit" class="btn btn-primary">Lưu <i class="icon-arrow-right14 position-right"></i></button>
											</div>
										
                                      <% end %>
