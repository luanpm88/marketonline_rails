<!-- Basic column chart -->
<div class="panel panel-flat datatable_box">
    <div class="panel-heading" style="margin-bottom: 0">
        <h5 class="panel-title">Lịch sử cộng tác bán hàng</h5>
    </div>
    
    
    
    <div class="panel-body">
        <form class="datatable_filter">
          <h4>Bộ lọc</h4>
          <div class="row">
            <div class="col-md-4">
              <div class="form_group">
                <label>Tìm theo DEAL:</label>
                <div>
                    <%= select_tag "deal_id", options_for_select(@current_user.corp_deals.collect{|x| [x.pb_product.name,x.id]}, params[:deal_id]), include_blank: "Tất cả", class: "select width100" %>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form_group">
                <label>Tìm theo Khách hàng:</label>
                <div>
                    <%= select_tag "customer_id", options_for_select(@current_user.corp_customers.collect{|x| [x.display_name,x.id]}, params[:buyer_id]), include_blank: "Tất cả", class: "select width100" %>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="form_group">
                <label>Tìm theo Gian hàng:</label>
                <div>
                    <%= select_tag "seller_id", options_for_select(@current_user.corp_members.collect{|x| [x.pb_company.shop_name,x.id]}, params[:seller_id]), include_blank: "Tất cả", class: "select width100" %>
                </div>
              </div>
            </div>
          </div>
        </form>
        <hr style="margin-bottom: 0">
        <table class="table table-striped table-hover no-footer datatable-ajax" url="<%= agent_page_deals_path(format: "json") %>">
            <thead>
                <tr class="border-double">
                    <th class="text-nowrap">Người mua</th>
                    <th class="text-nowrap">DEAL (Sản phẩm)</th>
                    <th class="text-nowrap">Số lượng</th>					                
                    <th class="text-nowrap text-right">Giá mua (VNĐ)</th>
                    <th class="text-nowrap">Loại khách hàng</th>
                    <th class="text-nowrap">Thời gian bán</th>									
                    <th class="text-nowrap">Trạng thái</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<!-- /basic column chart -->