<!-- Basic column chart -->
<div class="panel panel-flat datatable_box">
    <div class="panel-heading" style="margin-bottom: 0">
        <h5 class="panel-title">Lịch sử bán hàng</h5>
    </div>
        
    <div class="panel-body">
        <form class="datatable_filter">
          <h4>Bộ lọc</h4>
          <div class="row">
            <div class="col-md-6">
              <div class="form_group">
                <label>Tìm theo DEAL:</label>
                <input placeholder="chọn DEAL" type="text" value="" text="" name="deal_id" class="select2-ajax" data_link="<%= deals_path(format: "json") %>" />
              </div>
            </div>
            <div class="col-md-3">
              <div class="form_group">
                <label>Tìm theo Công tác viên:</label>
                <input placeholder="chọn cộng tác viên" type="text" value="" text="" name="agent_id" class="select2-ajax" data_link="<%= deals_path(format: "json", type: "agents") %>" />
              </div>
            </div>
            <div class="col-md-3">
              <div class="form_group">
                <label>Tìm theo Khách hàng:</label>
                <input placeholder="chọn khách hàng" type="text" value="" text="" name="customer_id" class="select2-ajax" data_link="<%= deals_path(format: "json", type: "customers") %>" />
              </div>
            </div>
          </div>
        </form>
        <hr style="margin-bottom: 0">
        <table class="table table-striped table-hover no-footer datatable-ajax" url="<%= datatable_pb_saleorderitems_path(format: "json") %>">
            <thead>
                <tr class="border-double">
                    <th class="text-nowrap">Người mua</th>
                    <th class="text-nowrap">DEAL (Sản phẩm)</th>
                    <th class="text-nowrap">Số lượng</th>					                
                    <th class="text-nowrap text-right">Giá mua (VNĐ)</th>
                    <th class="text-nowrap">Loại khách hàng</th>
                    <th class="text-nowrap">Thời gian bán</th>									
                    <th class="text-nowrap">Trạng thái</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<!-- /basic column chart -->