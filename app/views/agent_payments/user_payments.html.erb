<%= render "deals/corp_statistics" %>
					<!-- Ajax sourced data -->
					<div class="panel panel-flat datatable_box">
						<div class="panel-heading">
							<h5 class="panel-title">Thống kê tài khoảng & Thu nhập</h5>
							
						</div>
                            
                        
                          
						<div class="panel-body">
							<div class="row">
                              <div class="col-sm-4 col-lg-2 col-xs-6">
                                  <div class="panel">
                                      
                                          <div class="bg-brown demo-color small_box">
                                              <span class="box-background"><i class="icon-coins"></i></span>
                                              <span class="box-count"><%= format_price(@current_user.deal_income) %></span>
                                              <span class="box-title">Tổng cộng</span>
                                          </div>
                                      
      
                                      <div style="height: 3px;">
                                      </div>
                                  </div>
                              </div>
                              
                              <div class="col-sm-4 col-lg-2 col-xs-6">
                                  <div class="panel">
                                      <a  href="<%= corp_deals_deals_path %>" title="Xem danh sách cộng tác viên">
                                          <div class="bg-brown demo-color small_box">
                                              <span class="box-background"><i class="icon-coins"></i></span>
                                              <span class="box-count"><%= format_price(@current_user.paid_amount) %></span>
                                              <span class="box-title">Đã thanh toán</span>
                                          </div>
                                      </a>
      
                                      <div style="height: 3px;">
                                      </div>
                                  </div>
                              </div>
                              
                              <div class="col-sm-4 col-lg-2 col-xs-6">
                                  <div class="panel">
                                      <a  href="<%= agent_page_deals_path %>" title="Xem danh sách khách hàng">
                                        <div class="bg-brown demo-color small_box">
                                            <span class="box-background"><i class="icon-coins"></i></span>
                                            <span class="box-count"><%= format_price(@current_user.remain_amount) %></span>
                                            <span class="box-title">Chưa thanh toán</span>
                                        </div>
                                      </a>
                                      <div style="height: 3px">
                                      </div>
                                  </div>
                              </div>
							  
								<div class="col-sm-4 col-lg-2 col-xs-6">
									<div class="panel">
										<a  href="<%= user_payments_agent_payments_path %>" title="Tổng quà tặng">
											<div class="bg-purple demo-color small_box">
												<span class="box-background"><i class="icon-gift"></i></span>
												<span class="box-count"><%= format_price(@current_user.agent_gifts_count) %></span>
												<span class="box-title">Tổng quà</span>
											</div>
										</a>
										<div style="height: 3px;">
										</div>
									</div>
								</div>
								<div class="col-sm-4 col-lg-2 col-xs-6">
									<div class="panel">
										<a  href="<%= user_payments_agent_payments_path %>" title="Quà đã nhận">
											<div class="bg-purple demo-color small_box">
												<span class="box-background"><i class="icon-gift"></i></span>
												<span class="box-count"><%= format_price(@current_user.paid_gift) %></span>
												<span class="box-title">Quà đã nhận</span>
											</div>
										</a>
										<div style="height: 3px;">
										</div>
									</div>
								</div>
								<div class="col-sm-4 col-lg-2 col-xs-6">
									<div class="panel">
										<a  href="<%= user_payments_agent_payments_path %>" title="Quà chưa nhận">
											<div class="bg-purple demo-color small_box">
												<span class="box-background"><i class="icon-gift"></i></span>
												<span class="box-count"><%= format_price(@current_user.remain_gift) %></span>
												<span class="box-title">Quà chưa nhận</span>
											</div>
										</a>
										<div style="height: 3px;">
										</div>
									</div>
								</div>
                            </div>
						</div>
                        <hr style="margin:0" />
						<table class="table table-striped table-hover no-footer datatable-ajax" url="<%= user_payments_agent_payments_path(format: "json") %>">
							<thead>
								<tr class="border-double">
                                    <th class="text-nowrap" width="1%">Thời gian</th>
									<th class="text-nowrap">Hình thức thanh toán</th>
					                <th class="text-nowrap">Nội dung</th>									
					                <th class="text-nowrap">Số lượng</th>
					            </tr>
							</thead>
						</table>
					</div>
					<!-- /ajax sourced data -->
					
					
