<%= render "deals/corp_statistics" %>
					<!-- Ajax sourced data -->
					<div class="panel panel-flat datatable_box">
						<div class="panel-heading">
							<h5 class="panel-title">Thống kê tài khoảng & Thu nhập</h5>
							<div class="heading-elements">
								<%= link_to '<i class="icon-plus3 position-left"></i> Tạo DEAL mới'.html_safe, new_deal_path, class: "btn btn-xs btn-default pull-left" %>
		                	</div>
						</div>
                            
                        
                          
						<div class="panel-body">
							<div class="row">
                              <div class="col-sm-4 col-lg-2 col-xs-6">
                                  <div class="panel">
                                      
                                          <div class="bg-grey demo-color">
                                              <span class="box-background"><i class="icon-store"></i></span>
                                              <span class="box-count"><%= format_price(@current_user.agent_info[:total]) %></span>
                                              <span class="box-title">Tổng cộng</span>
                                          </div>
                                      
      
                                      <div style="height: 3px;">
                                      </div>
                                  </div>
                              </div>
                              
                              <div class="col-sm-4 col-lg-2 col-xs-6">
                                  <div class="panel">
                                      <a  href="<%= corp_deals_deals_path %>" title="Xem danh sách cộng tác viên">
                                          <div class="bg-grey demo-color">
                                              <span class="box-background"><i class="icon-price-tags"></i></span>
                                              <span class="box-count"><%= format_price(@current_user.paid_amount) %></span>
                                              <span class="box-title">Đã thanh toán</span>
                                          </div>
                                      </a>
      
                                      <div style="height: 3px;">
                                      </div>
                                  </div>
                              </div>
                              
                              <div class="col-sm-4 col-lg-2 col-xs-6">
                                  <div class="panel">
                                      <a  href="<%= agent_page_deals_path %>" title="Xem danh sách khách hàng">
                                        <div class="bg-grey demo-color">
                                            <span class="box-background"><i class="icon-exit"></i></span>
                                            <span class="box-count"><%= format_price(@current_user.remain_amount) %></span>
                                            <span class="box-title">Chưa thanh toán</span>
                                        </div>
                                      </a>
                                      <div style="height: 3px">
                                      </div>
                                  </div>
                              </div>
                            </div>
						</div>
                        <hr style="margin:0" />
						<table class="table table-striped table-hover no-footer datatable-ajax" url="<%= user_payments_agent_payments_path(format: "json") %>">
							<thead>
								<tr class="border-double">
                                    <th class="text-nowrap">Thời gian thanh toán</th>
					                <th class="text-nowrap">Nội dung thanh toán</th>					                
					                <th class="text-nowrap">Số tiền thanh toán</th>
					            </tr>
							</thead>
						</table>
					</div>
					<!-- /ajax sourced data -->
					
					
