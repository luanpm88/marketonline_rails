<% if !@new_list.empty? %>
  <div class="info_page_listing_container">
    <h2><%= @type_title %> mới</h2>
    
    <ul class="listing_ul">
      <% @new_list.each do |af| %>
        <li>
          <a href="<%= af.area_link(params) %>"><img src="<%= af.image_thumb %>" /></a>
          <div class="content_box">
            <a href="<%= af.area_link(params) %>">
              <h4><%= af.title %></h4>            
            </a>
            <p><%= af.content.mb_chars.gsub(/<\/?[^>]*>/, "")  %></p>
          </div>
          <a href="<%= af.area_link(params) %>" class="view_more_button">Xem thêm</a>
        </li>
      <% end %>
    </ul>
    
  </div>
<% end %>